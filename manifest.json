{
    "name": "Screen Recording Extension",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["tabs", "activeTab", "desktopCapture"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/record-icon-16.png",
        "48": "images/record-icon-48.png",
        "128": "images/record-icon-128.png"
      }
    }
  }
  